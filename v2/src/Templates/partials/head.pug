// START head
//- Include config.pug file that holds all variables
block config
  include ../helpers/config
  include ../helpers/mixin

head
  meta(charset="utf-8")
  meta(http-equiv="X-UA-Compatible", content="IE=edge")
  title
    block title
      | #{pageTitle}
  
  // Mobile Specific Meta Tag
  meta(name="viewport", content="width=device-width, initial-scale=1.0, user-scalable=no")

  // SEO Meta Tags
  meta(name="description", content="CCY CHEN")
  meta(name="keywords", content="ccy chen, drawing")
  meta(name="author", content="ccy chen")
  
  // Facebook and Twitter integration
  meta(property="og:title" content="")
  meta(property="og:image" content="")
  meta(property="og:url" content="")
  meta(property="og:site_name" content="")
  meta(property="twitter:title" content="")
  meta(property="twitter:image" content="")
  meta(property="twitter:url" content="")
  meta(property="twitter:card" content="")
  = '\n'

  if hasSwiper
    link(rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css")

  = '\n'
  // Vendor Styles including: Bootstrap, Font Icons, Plugins, etc.
  link(href=root + "css/vendor.min.css", rel="stylesheet")

  // Main Template Styles
  link(href=root + "css/styles.css", rel="stylesheet")


  block endHeadBlock


