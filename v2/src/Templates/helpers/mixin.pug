mixin category-item(caption, imgUrl, url)
    div.categoryItem.col-6
        a(href=url)
            img(src=imgUrl)
            span
                | #{caption}


mixin folder-item(caption, imgUrl, url)
    div.categoryItem.col-6.col-md-4.col-lg-3
        a(href=url)
            img(src=imgUrl)
            span
                | #{caption}

mixin drawing-item(caption, imgUrl, url)
    div.drawingItem.col-sm-12.col-md-6.col-lg-4
        a(href=url)
            img(src=imgUrl)
            span
                | #{caption}